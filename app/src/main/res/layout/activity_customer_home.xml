<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerHome">
    <RelativeLayout
        android:background="@color/coklat"
        android:id="@+id/cont1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">
 <ImageView
     android:id="@+id/imfoto"
     android:layout_width="60dp"
     android:layout_height="80dp"
     android:layout_marginLeft="20dp"
     android:layout_marginTop="20dp"
     android:background="@color/putih"
     android:baseline="20dp" />
  <EditText
      android:layout_marginTop="25dp"
      android:layout_marginLeft="110sp"
      android:id="@+id/txpenjual"
      android:background="@drawable/round"
      android:layout_width="270dp"
      android:layout_height="30dp"
      android:gravity="center"
      android:text="nama penjual"/>
  <EditText
      android:id="@+id/txnmproduct"
      android:layout_width="270dp"
      android:background="@color/putih"
      android:layout_height="30dp"
      android:text="nama product"
      android:gravity="center"
      android:layout_marginTop="65dp"
      android:layout_marginLeft="110sp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@+id/cont1"
        android:layout_marginTop="7dp">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="70sp" />

    </RelativeLayout>

</RelativeLayout>