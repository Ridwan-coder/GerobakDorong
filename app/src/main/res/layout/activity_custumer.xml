<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CUSTUMER">

    <TextView
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="CUSTOMER"
        android:textColor="@color/coklat"
        android:textSize="40dp" />


        <EditText
            android:layout_marginTop="35dp"
            android:id="@+id/edmasuknama"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="masukan email" />

        <EditText
            android:id="@+id/edmasukpasswd"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="password" />



    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btsightup"
            android:layout_marginLeft="80sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/coklat"
            android:text="sign up"
            android:textColor="@color/putih" />

        <Button
            android:id="@+id/btsighin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:background="@color/coklat"
            android:text="sigh in"
            android:textColor="@color/putih" />


    </RelativeLayout>


</LinearLayout>